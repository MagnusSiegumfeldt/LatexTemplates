\newcommand{\CustomTitle}[3]{{\noindent\LARGE #1}\vspace{2mm} \\{\large #2\\#3}}

% FONT SETUP
\usepackage{extsizes}
\setlist{nolistsep}
\setlength\parindent{0pt}
\renewcommand{\labelitemi}{$\vcenter{\hbox{\tiny$\bullet$}}$}
\setlist[description]{leftmargin=0.5cm}

% SECTION STYLING
\usepackage{titlesec}
\titleformat{\section}{\sffamily\normalsize\bfseries}{\thesection}{1em}{}[\titlerule\vspace*{-4pt}]
\titleformat{\subsection}{\sffamily\normalsize\bfseries}{\thesubsection}{1em}{}[\vspace*{-2pt}]
\titleformat{\subsubsection}{\sffamily\normalsize\bfseries}{\thesubsubsection}{1em}{}

% LAYOUT
\usepackage{geometry}
\geometry{
    a4paper,
	left=7mm,
	right=7mm,
	top=7mm,
	bottom=15mm,
    landscape
}

% HEADERS AND FOOTERS
\pagestyle{fancy}
\lhead{}\chead{}\rhead{}\lfoot{{\tiny Compiled: \today}}\cfoot{}\rfoot{\thepage}
\renewcommand{\headrulewidth}{0pt}
\renewcommand{\footrulewidth}{0pt}
    
    
% EQUATION SPACING
\AtBeginDocument{
	\addtolength{\abovedisplayskip}{-5pt}
	\addtolength{\abovedisplayshortskip}{-5pt}
	\addtolength{\belowdisplayskip}{-5pt}
	\addtolength{\belowdisplayshortskip}{-5pt}
}

